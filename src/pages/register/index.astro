---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Determinar el tipo de registro basado en el par√°metro de URL
const { type } = Astro.url.searchParams;
---

<Layout title="Registro | B2B Connect">
  <Header />
  
  <main class="pt-32 pb-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 text-center">
          Registro en B2B Connect
        </h1>
        
        {type === 'client' ? (
          <div class="text-center mb-10">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Registro como Cliente</h2>
            <p class="text-gray-600 text-lg mb-8">
              Encuentre a los mejores proveedores para su negocio en minutos.
            </p>
            <a href="/register/client/step1" class="px-8 py-4 bg-blue-600 text-white font-medium rounded-lg transition-colors shadow-md hover:bg-blue-700 inline-block">
              Comenzar Registro
            </a>
          </div>
        ) : type === 'provider' ? (
          <div class="text-center mb-10">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Registro como Proveedor</h2>
            <p class="text-gray-600 text-lg mb-8">
              Conecte con empresas que necesitan sus productos o servicios.
            </p>
            <a href="/register/provider/step1" class="px-8 py-4 bg-blue-600 text-white font-medium rounded-lg transition-colors shadow-md hover:bg-blue-700 inline-block">
              Comenzar Registro
            </a>
          </div>
        ) : (
          <div class="flex flex-col md:flex-row gap-8 mt-10">
            <div class="flex-1 bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow p-8 border border-gray-200 text-center">
              <div class="w-20 h-20 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-4">Soy Cliente</h3>
              <p class="text-gray-600 mb-6 h-20">
                Busco proveedores para mi negocio y quiero conectar con los mejores del mercado.
              </p>
              <a href="/register/client/step1" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg transition-colors hover:bg-blue-700 inline-block w-full">
                Registrarme como Cliente
              </a>
            </div>
            
            <div class="flex-1 bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow p-8 border border-gray-200 text-center">
              <div class="w-20 h-20 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-4">Soy Proveedor</h3>
              <p class="text-gray-600 mb-6 h-20">
                Ofrezco productos o servicios y quiero conectar con empresas que necesiten lo que ofrezco.
              </p>
              <a href="/register/provider/step1" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg transition-colors hover:bg-blue-700 inline-block w-full">
                Registrarme como Proveedor
              </a>
            </div>
          </div>
        )}
      </div>
    </div>
  </main>

  <Footer />
</Layout>
