---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
---

<Layout title="Configura tu ubicación | Registro Proveedor B2B Connect">
  <Header />
  
  <main class="pt-32 pb-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Indicador de progreso -->
        <div class="mb-12">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-10 h-10 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold">
                ✓
              </div>
              <div class="ml-3 text-blue-600 font-semibold">Rubros</div>
            </div>
            <div class="flex-grow mx-4 h-1 bg-blue-600"></div>
            <div class="flex items-center">
              <div class="w-10 h-10 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold">
                2
              </div>
              <div class="ml-3 text-blue-600 font-semibold">Ubicación</div>
            </div>
            <div class="flex-grow mx-4 h-1 bg-gray-200"></div>
            <div class="flex items-center">
              <div class="w-10 h-10 bg-gray-200 text-gray-500 rounded-full flex items-center justify-center font-bold">
                3
              </div>
              <div class="ml-3 text-gray-500">Clientes</div>
            </div>
          </div>
        </div>
        
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 text-center">
          ¿Dónde opera tu empresa?
        </h1>
        
        <p class="text-gray-600 text-lg mb-12 text-center">
          Selecciona el alcance geográfico de tus operaciones para conectarte con los clientes adecuados.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
          <!-- Opción: Nacional -->
          <label id="option-national" class="border-2 border-gray-200 rounded-xl p-6 cursor-pointer hover:shadow-md transition-all scope-option flex flex-col items-center h-full">
            <div class="w-16 h-16 mb-4 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3 text-center">Empresa Nacional</h3>
            <p class="text-gray-600 text-center mb-4 flex-grow">Ofrezco mis servicios principalmente dentro del país.</p>
            <input type="radio" name="scope" value="national" class="hidden">
            <div class="mt-4 h-1 w-full bg-blue-600 opacity-0 transition-opacity"></div>
          </label>

          <!-- Opción: Internacional -->
          <label id="option-international" class="border-2 border-gray-200 rounded-xl p-6 cursor-pointer hover:shadow-md transition-all scope-option flex flex-col items-center h-full">
            <div class="w-16 h-16 mb-4 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3 text-center">Empresa Internacional</h3>
            <p class="text-gray-600 text-center mb-4 flex-grow">Ofrezco mis servicios en múltiples países o a nivel global.</p>
            <input type="radio" name="scope" value="international" class="hidden">
            <div class="mt-4 h-1 w-full bg-blue-600 opacity-0 transition-opacity"></div>
          </label>
        </div>

        <!-- Para empresas nacionales, solicitar más detalles -->
        <div id="national-details" class="mb-12 hidden">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Detalla tu ubicación</h3>
          <div class="space-y-4">
            <div>
              <label for="city" class="block text-sm font-medium text-gray-700 mb-1">Ciudad</label>
              <input 
                type="text" 
                id="city" 
                name="city" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none"
                placeholder="Ej: Madrid, Barcelona, Sevilla..."
              >
            </div>
            
            <div>
              <label for="region" class="block text-sm font-medium text-gray-700 mb-1">Región / Comunidad Autónoma</label>
              <input 
                type="text" 
                id="region" 
                name="region" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none"
                placeholder="Ej: Cataluña, Andalucía, Madrid..."
              >
            </div>
          </div>
        </div>
        
        <div class="text-center mt-12">
          <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a href="/register/provider/step1" class="px-6 py-3 border border-blue-600 text-blue-600 font-medium rounded-lg transition-colors hover:bg-blue-50">
              Atrás
            </a>
            <button 
              id="next-button" 
              type="button" 
              disabled
              class="px-8 py-4 bg-blue-600 text-white font-medium rounded-lg transition-colors shadow-md hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              Continuar
            </button>
          </div>
          <p class="text-sm text-gray-500 mt-3" id="selection-message">
            Selecciona una opción para continuar
          </p>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Verificar que el usuario viene del flujo correcto
    const providerData = sessionStorage.getItem('providerData');
    const providerIndustries = sessionStorage.getItem('providerIndustries');
    
    if (!providerData) {
      window.location.href = '/register/provider/form';
      return;
    }
    
    if (!providerIndustries) {
      window.location.href = '/register/provider/step1';
      return;
    }

    const nextButton = document.getElementById('next-button');
    const selectionMessage = document.getElementById('selection-message');
    const options = document.querySelectorAll('.scope-option');
    const nationalDetails = document.getElementById('national-details');
    let selectedScope = null;
    
    options.forEach(option => {
      option.addEventListener('click', () => {
        // Desseleccionar todas las opciones
        options.forEach(opt => {
          opt.classList.remove('border-blue-600', 'bg-blue-50');
          opt.querySelector('input').checked = false;
          opt.querySelector('div.opacity-0')?.classList.add('opacity-0');
        });
        
        // Seleccionar la opción actual
        option.classList.add('border-blue-600', 'bg-blue-50');
        option.querySelector('input').checked = true;
        option.querySelector('div.opacity-0')?.classList.remove('opacity-0');
        
        // Guardar la selección
        selectedScope = option.querySelector('input').value;
        
        // Mostrar campos adicionales si es nacional
        if (selectedScope === 'national' && nationalDetails) {
          nationalDetails.classList.remove('hidden');
        } else if (nationalDetails) {
          nationalDetails.classList.add('hidden');
        }
        
        // Habilitar el botón
        nextButton.disabled = false;
        selectionMessage.textContent = 'Opción seleccionada';
      });
    });
    
    nextButton.addEventListener('click', () => {
      if (selectedScope) {
        // Recopilar datos adicionales de ubicación si es nacional
        let locationData = { type: selectedScope };
        
        if (selectedScope === 'national') {
          locationData.city = document.getElementById('city')?.value || '';
          locationData.region = document.getElementById('region')?.value || '';
        }
        
        // Guardar selección en sessionStorage
        sessionStorage.setItem('providerLocation', JSON.stringify(locationData));
        
        // Redirigir al siguiente paso
        window.location.href = '/register/provider/step3';
      }
    });
  });
</script>
